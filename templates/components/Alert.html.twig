<div
        {{ attributes.defaults({class: this.className}) }}
        data-te-alert-init
        {{ dismissible ? 'data-te-alert-show ' : '' }}
        {{ autohide ? 'data-autohide ' : '' }}
        data-te-alert-init role="alert">
    <div class="flex flex-col">
        {% if title is not empty %}<h4
                class="alert-heading">
            {{ title|trans|raw }}
            </h4>{% endif %}
        <div class="inline-flex items-center">
            {% if icon %}
                <twig:Micon name="{{ this.iconName }}" variant="{{ this.iconVariant }}" class="me-3" size="20"/>
            {% endif %}
            {% block message %}{{ message|trans|raw }}{% endblock message %}
        </div>

    </div>
    {% if dismissible %}
        <button type="button" data-te-alert-dismiss aria-label="{{ 'Close'|trans }}">
            <twig:Micon name="close" size="16"
                        class="focus:opacity-100 disabled:pointer-events-none disabled:select-none disabled:opacity-25 [&.disabled]:pointer-events-none [&.disabled]:select-none [&.disabled]:opacity-25"/>
        </button>
    {% endif %}
</div>

