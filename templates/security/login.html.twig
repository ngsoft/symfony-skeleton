{% set page_title='Login' %}

{% extends 'layout.html.twig' %}


{% block content %}

    <div class="min-h-screen flex flex-col justify-center items-center w-screen">

        <div class="container mx-auto sm:px-4 flex flex-col justify-center md:w-[50vw]">
            <h3 class="text-center mb-5 capitalize">{{ 'login'|trans }}</h3>


            <form action="{{ path('app_login') }}" method="post">

                {% if error %}
                    <div role="alert"
                         class="alert alert-danger">
                        <twig:Micon name="cancel" class="me-3"/>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="mb-3">
                    <label
                            class="block mb-2 text-sm font-medium text-gray-900 dark:text-white capitalize"
                            for="username">{{ 'username'|trans }}</label>
                    <input
                            class="text-gray-900 bg-gray-50 rounded-lg text-sm block w-full p-2.5 border border-gray-300 focus:z-10 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500"
                            required
                            type="text" id="username" name="_username" value="{{ last_username }}">
                </div>
                <div class="mb-3">
                    <label
                            class="block mb-2 text-sm font-medium text-gray-900 dark:text-white capitalize"
                            for="password">{{ 'password'|trans }}</label>
                    <input
                            class="text-gray-900 bg-gray-50 rounded-lg text-sm block w-full p-2.5 border border-gray-300 focus:z-10 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500"
                            required
                            type="password" id="password" name="_password">
                </div>


                <div class="mb-3">
                    <div class="flex items-center mr-4">
                        <input
                                class="rounded w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                                type="checkbox" name="_remember_me" id="remember-me">
                        <label class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300 cursor-pointer"
                               for="remember-me">
                            {{ 'Remember me'|trans }}
                        </label>
                    </div>
                </div>


                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {# If you want to control the URL the user is redirected to on success
                    <input type="hidden" name="_target_path" value="/account"> #}
                <div class="flex items-center">
                    <div class="me-auto">
                        {% if can_register %}
                            <a href="{{ path('app_register') }}" class="link-primary hover-underline capitalize">
                                {{ 'Create an account'|trans }}
                            </a>
                        {% endif %}
                    </div>

                    <div class="text-right">
                        <button
                                class="btn btn-primary"
                                type="submit"
                                data-te-ripple-init>
                            {{ 'login'|trans }}
                        </button>
                    </div>

                </div>

            </form>
        </div>

    </div>
{% endblock %}
