{% set page_title='User Profile' %}
{% extends 'layout.html.twig' %}

{% block content %}

    <div class="container mx-auto flex flex-col items-center w-screen select-none">

        <div class="block rounded-lg bg-white p-6 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-700 w-full md:w-[50vw] my-4">
            <h3 class="h3 text-center mb-5 capitalize">{{ page_title|trans }}</h3>
            {{ form_start(formProfile) }}
            {{ form_row(formProfile.fullName) }}
            {{ form_row(formProfile.email, {
                disabled: hasEmail,
                value: app.user.email
            }) }}
            {{ form_end(formProfile) }}
        </div>

        <div class="block rounded-lg bg-white p-6 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-700 w-full md:w-[50vw]">
            <h3 class="h3 text-center mb-5 capitalize">{{ 'Change your password'|trans }}</h3>
            {{ form(formPassword) }}
        </div>
    </div>

{% endblock %}



